<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.Maintenix.Staff.StaffLoginController"
            stylesheets="@/Styles/staffloginstyle.css" styleClass="login-root">

    <center>
        <HBox alignment="CENTER" spacing="40" styleClass="login-container">

            <!-- Left Section -->
            <VBox alignment="CENTER" spacing="20" styleClass="left-section">
                <ImageView fx:id="logo" fitHeight="100" fitWidth="150" preserveRatio="true"/>
                <ImageView fx:id="illustration" fitWidth="300" preserveRatio="true"/>
                <Label text="Welcome Back!" styleClass="welcome-text"/>
            </VBox>

            <!-- Right Section (Login Form) -->
            <VBox alignment="CENTER" spacing="20" styleClass="right-section">
                <!-- Back Button (top-right of form) -->
                <HBox alignment="TOP_RIGHT" styleClass="back-container">
                    <Button fx:id="backLink" text="â† Back" onAction="#handleBackClick" styleClass="back-btn"/>
                </HBox>

                <Label text="Log in" styleClass="form-title"/>

                <TextField fx:id="emailField" promptText="Username" styleClass="input"/>
                <PasswordField fx:id="passwordField" promptText="Password" styleClass="input"/>

                <HBox alignment="CENTER_LEFT">
                    <CheckBox fx:id="rememberMe" text="Remember Me" styleClass="remember-me"/>
                </HBox>

                <Button text="Log in" fx:id="loginBtn" styleClass="login-btn"/>

                <Label text="OR" styleClass="divider"/>

                <Hyperlink fx:id="signup_link" text="Sign up" styleClass="signup-link"/>
            </VBox>
        </HBox>
    </center>

</BorderPane>
