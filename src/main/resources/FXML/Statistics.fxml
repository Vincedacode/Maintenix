<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<BorderPane stylesheets="@/Styles/statisticsstyle.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Maintenix.Admin.StatisticsController">
    <left>
        <VBox styleClass="sidebar" BorderPane.alignment="CENTER">
            <children>
                <!-- Logo Section -->
                <HBox styleClass="logo-section" alignment="CENTER_LEFT">
                    <children>
                        <Label styleClass="logo-icon" text="âš™" />
                        <Label styleClass="brand-text" text="Maintenix" />
                    </children>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </HBox>

                <!-- Navigation Menu -->
                <VBox styleClass="nav-menu">
                    <children>
                        <Button fx:id="dashboardBtn" text="ðŸ“Š Dashboard" styleClass="nav-item" maxWidth="Infinity" />
                        <Button fx:id="statisticsBtn" text="ðŸ“ˆ Statistics" styleClass="nav-item, nav-active" maxWidth="Infinity" />
                        <Button fx:id="notificationsBtn" text="ðŸ”” Notifications" styleClass="nav-item" maxWidth="Infinity" />
                    </children>
                    <padding>
                        <Insets left="10.0" right="10.0" />
                    </padding>
                </VBox>

                <Region VBox.vgrow="ALWAYS" />

                <!-- Logout Button -->
                <Button fx:id="logoutBtn" text="ðŸšª Log Out" styleClass="nav-item, logout-btn" maxWidth="Infinity">
                    <VBox.margin>
                        <Insets bottom="20.0" left="10.0" right="10.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </left>

    <center>
        <VBox styleClass="main-content">
            <children>
                <!-- Header -->
                <HBox alignment="CENTER_LEFT" styleClass="header">
                    <children>
                        <Label styleClass="welcome-text" text="Welcome back, Toluwani," />
                        <Region HBox.hgrow="ALWAYS" />
                        <HBox alignment="CENTER_RIGHT" spacing="10.0">
                            <children>
                                <Label styleClass="user-name" text="Toluwani" />
                                <Label styleClass="user-role" text="Admin" />
                                <Label styleClass="user-avatar" text="T" />
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                    </padding>
                </HBox>

                <!-- Content Area -->
                <ScrollPane fitToWidth="true" styleClass="content-scroll">
                    <content>
                        <VBox spacing="20.0">
                            <children>
                                <!-- Period Selection -->
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label styleClass="period-label" text="Select period:" />
                                        <Button styleClass="period-btn, period-active" text="from Jan 1, 2025" />
                                        <Button styleClass="period-btn, period-active" text="to Dec 31, 2025" />
                                    </children>
                                </HBox>

                                <!-- Statistics Cards Row -->
                                <HBox spacing="20.0">
                                    <children>
                                        <!-- Total Devices Card -->
                                        <VBox styleClass="stat-card, primary-card">
                                            <children>
                                                <Label styleClass="stat-label" text="Total Devices" />
                                                <Label styleClass="stat-value, primary-value" text="80" />
                                            </children>
                                            <Region HBox.hgrow="ALWAYS" />
                                        </VBox>

                                        <!-- Inactive Devices Percentage -->
                                        <VBox styleClass="stat-card, secondary-card">
                                            <children>
                                                <Label styleClass="stat-label" text="Inactive Devices (%)" />
                                                <Label styleClass="stat-value" text="36.2%" />
                                            </children>
                                            <Region HBox.hgrow="ALWAYS" />
                                        </VBox>

                                        <!-- Number of Inactive Devices -->
                                        <VBox styleClass="stat-card, secondary-card">
                                            <children>
                                                <Label styleClass="stat-label" text="Number of Inactive Devices" />
                                                <Label styleClass="stat-value" text="36" />
                                            </children>
                                            <Region HBox.hgrow="ALWAYS" />
                                        </VBox>
                                    </children>
                                </HBox>

                                <!-- Charts Row -->
                                <HBox spacing="20.0">
                                    <children>
                                        <!-- Priority Breakdown Chart -->
                                        <VBox styleClass="chart-container">
                                            <children>
                                                <Label styleClass="chart-title" text="Total Breakdown (by Priority)" />
                                                <PieChart fx:id="priorityChart" prefHeight="300.0" />
                                            </children>
                                            <Region HBox.hgrow="ALWAYS" />
                                        </VBox>

                                        <!-- Charts Column -->
                                        <VBox spacing="20.0">
                                            <children>
                                                <!-- Inactive Devices Chart -->
                                                <VBox styleClass="chart-container">
                                                    <children>
                                                        <Label styleClass="chart-title" text="Inactive Devices per month" />
                                                        <BarChart fx:id="inactiveDevicesChart" prefHeight="200.0">
                                                            <xAxis>
                                                                <CategoryAxis fx:id="inactiveXAxis" />
                                                            </xAxis>
                                                            <yAxis>
                                                                <NumberAxis fx:id="inactiveYAxis" />
                                                            </yAxis>
                                                        </BarChart>
                                                    </children>
                                                </VBox>

                                                <!-- Active Devices Chart -->
                                                <VBox styleClass="chart-container">
                                                    <children>
                                                        <Label styleClass="chart-title" text="Active Devices per month" />
                                                        <BarChart fx:id="activeDevicesChart" prefHeight="200.0">
                                                            <xAxis>
                                                                <CategoryAxis fx:id="activeXAxis" />
                                                            </xAxis>
                                                            <yAxis>
                                                                <NumberAxis fx:id="activeYAxis" />
                                                            </yAxis>
                                                        </BarChart>
                                                    </children>
                                                </VBox>
                                            </children>
                                            <Region HBox.hgrow="ALWAYS" />
                                        </VBox>
                                    </children>
                                </HBox>
                            </children>
                            <padding>
                                <Insets bottom="30.0" left="30.0" right="30.0" top="10.0" />
                            </padding>
                        </VBox>
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </center>
</BorderPane>
