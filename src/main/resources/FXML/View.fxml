<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.Maintenix.MainController" style="-fx-background-color: white;"  stylesheets="@../Styles/style.css">

    <!-- Top Header -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 0 0 0 50;">
            <ImageView styleClass="logo" fx:id="logo" fitWidth="150" fitHeight="150" preserveRatio="true"/>
        </HBox>
    </top>


    <!-- Main Content -->
    <center>
        <HBox alignment="CENTER" spacing="50" style="-fx-padding: 40;">

            <!-- Left Section -->
            <VBox alignment="CENTER" spacing="15">
                <ImageView fx:id="illustration" fitWidth="350" preserveRatio="true"/>
                <Label text="" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            </VBox>

            <!-- Right Section -->
            <VBox alignment="CENTER_LEFT" spacing="20">
                <Text text="Manage Requests &amp; Maintenance Easily"
                      style="-fx-font-size: 28px; -fx-fill: #1E3A8A; -fx-font-weight: bold;"/>

                <Label text="Submit equipment requests, report issues, and track maintenance progress all in one place. This system makes it easy for staff and administrators to manage hardware and software needs efficiently."
                       wrapText="true"  maxWidth="350" style="-fx-font-size: 18px; -fx-text-fill: #555; -fx-font-weight: bold;"/>

                <HBox spacing="15">
                    <Button text="ADMIN" fx:id="adminBtn" styleClass="primary-btn"/>
                    <Button text="STAFF" fx:id="staffBtn" styleClass="primary-btn"/>
                </HBox>
            </VBox>

        </HBox>
    </center>
</BorderPane>
