<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane stylesheets="@/Styles/admindashboardstyle.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Maintenix.Admin.AdminDashboardController">
    <left>
        <VBox styleClass="sidebar" BorderPane.alignment="CENTER">
            <children>
                <!-- Logo Section -->
                <HBox styleClass="logo-section" alignment="CENTER_LEFT">
                    <children>
                        <ImageView fitWidth="100" fitHeight="150" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@/images/logo.png" />
                            </image>
                        </ImageView>
                    </children>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </HBox>

                <!-- Navigation Menu -->
                <VBox styleClass="nav-menu">
                    <children>
                        <Button fx:id="dashboardBtn" text="ðŸ“Š Dashboard" styleClass="nav-button, nav-active" maxWidth="Infinity" />
                        <Button fx:id="statisticsBtn" text="ðŸ“ˆ Statistics" styleClass="nav-button" maxWidth="Infinity" />
                        <Button fx:id="notificationsBtn" text="ðŸ”” Notifications" styleClass="nav-button" maxWidth="Infinity" />
                    </children>
                    <padding>
                        <Insets left="10.0" right="10.0" />
                    </padding>
                </VBox>

                <Region VBox.vgrow="ALWAYS" />

                <!-- Logout Button -->
                <Button fx:id="logoutBtn" text="ðŸšª Log Out" styleClass="nav-button, logout-button" maxWidth="Infinity">
                    <VBox.margin>
                        <Insets bottom="20.0" left="10.0" right="10.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </left>

    <center>
        <VBox styleClass="main-content">
            <children>
                <!-- Header -->
                <HBox styleClass="header" alignment="CENTER_LEFT">
                    <children>
                        <Label fx:id="welcomeLabel" text="Welcome back, Admin" styleClass="welcome-text" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="userNameLabel" text="Admin" styleClass="user-name" />
                        <Label text="" styleClass="user-role" />
                        <Region styleClass="user-avatar" />
                    </children>
                    <padding>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                    </padding>
                </HBox>

                <!-- Main Dashboard Content -->
                <HBox styleClass="dashboard-content" spacing="30.0">
                    <children>
                        <!-- New Device Request Section -->
                        <VBox styleClass="section" HBox.hgrow="ALWAYS">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label text="New Device Request" styleClass="section-title" />
                                        <Region HBox.hgrow="ALWAYS" />
                                        <MenuButton fx:id="deviceSortButton" text="Sort by Recently â–¼" styleClass="sort-button">
                                            <items>
                                                <MenuItem text="Recently" />
                                                <MenuItem text="Oldest" />
                                                <MenuItem text="Priority" />
                                            </items>
                                        </MenuButton>
                                    </children>
                                    <VBox.margin>
                                        <Insets bottom="15.0" />
                                    </VBox.margin>
                                </HBox>

                                <!-- Device Request Table -->
                                <TableView fx:id="deviceRequestTable" styleClass="request-table">
                                    <columns>
                                        <TableColumn fx:id="deviceCol" text="Device" prefWidth="150.0" />
                                        <TableColumn fx:id="dateCol" text="Date" prefWidth="100.0" />
                                        <TableColumn fx:id="priorityCol" text="Priority" prefWidth="80.0" />
                                    </columns>
                                </TableView>

                                <!-- Action Buttons -->
                                <HBox spacing="10.0" alignment="CENTER">
                                    <children>
                                        <Button fx:id="printBtn1" text="ðŸ–¨ Print" styleClass="action-button, print-button" />
                                        <Button fx:id="shareBtn1" text="ðŸ“¤ Share" styleClass="action-button, share-button" />
                                    </children>
                                    <VBox.margin>
                                        <Insets top="15.0" />
                                    </VBox.margin>
                                </HBox>

                                <!-- Bottom Action Buttons -->
                                <HBox spacing="10.0" alignment="CENTER">
                                    <children>
                                        <Button fx:id="historyBtn" text="ðŸ“‹ History" styleClass="bottom-button" />
                                        <Button fx:id="addUpdateBtn" text="âž• Add Update" styleClass="bottom-button" />
                                    </children>
                                    <VBox.margin>
                                        <Insets top="20.0" />
                                    </VBox.margin>
                                </HBox>
                            </children>
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </padding>
                        </VBox>

                        <!-- Maintenance Requests Section -->
                        <VBox styleClass="section" HBox.hgrow="ALWAYS">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label text="Maintenance Requests" styleClass="section-title" />
                                        <Region HBox.hgrow="ALWAYS" />
                                        <MenuButton fx:id="maintenanceSortButton" text="Sort by Recently â–¼" styleClass="sort-button">
                                            <items>
                                                <MenuItem text="Recently" />
                                                <MenuItem text="Oldest" />
                                                <MenuItem text="Priority" />
                                            </items>
                                        </MenuButton>
                                        <Button fx:id="printBtn2" text="ðŸ–¨ Print" styleClass="action-button, print-button" />
                                        <Button fx:id="shareBtn2" text="ðŸ“¤ Share" styleClass="action-button, share-button" />
                                    </children>
                                    <VBox.margin>
                                        <Insets bottom="15.0" />
                                    </VBox.margin>
                                </HBox>

                                <!-- Maintenance Request Table -->
                                <TableView fx:id="maintenanceRequestTable" styleClass="request-table">
                                    <columns>
                                        <TableColumn fx:id="mainDeviceCol" text="Device" prefWidth="120.0" />
                                        <TableColumn fx:id="mainDateCol" text="Date" prefWidth="100.0" />
                                        <TableColumn fx:id="mainPriorityCol" text="Priority" prefWidth="80.0" />
                                        <TableColumn fx:id="actionCol" text="Action" prefWidth="80.0" />
                                    </columns>
                                </TableView>

                                <!-- Show All Requests Link -->
                                <HBox alignment="CENTER">
                                    <children>
                                        <Hyperlink fx:id="showAllLink" text="Show All Requests â–¼" styleClass="show-all-link" />
                                    </children>
                                    <VBox.margin>
                                        <Insets top="15.0" />
                                    </VBox.margin>
                                </HBox>
                            </children>
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </padding>
                        </VBox>
                    </children>
                    <padding>
                        <Insets left="30.0" right="30.0" />
                    </padding>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>