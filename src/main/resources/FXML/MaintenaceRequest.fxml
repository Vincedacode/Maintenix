<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane stylesheets="@/Styles/maintenancerequeststyle.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Maintenix.Staff.MaintenanceRequestController" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
    <children>
        <!-- Main Container -->
        <HBox prefHeight="600.0" prefWidth="1000.0" styleClass="main-container" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <!-- Left Side -->
                <VBox prefHeight="600.0" styleClass="left-container" HBox.hgrow="ALWAYS">
                    <children>
                        <!-- Logo -->
                        <HBox alignment="CENTER_LEFT" prefHeight="80.0" styleClass="logo-container">
                            <children>
                                <ImageView fitWidth="100" fitHeight="150" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@/images/logo.png" />
                                    </image>
                                </ImageView>
                            </children>
                        </HBox>

                        <!-- Tool Image -->
                        <HBox alignment="CENTER" prefHeight="350.0">
                            <children>
                                <ImageView fitHeight="400.0" fitWidth="450.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@/images/logo.png" />
                                    </image>
                                </ImageView>
                            </children>
                        </HBox>

                        <!-- Welcome Text -->
                        <HBox alignment="CENTER_LEFT" prefHeight="170.0" styleClass="welcome-container">
                            <children>
                                <Label styleClass="welcome-text" text="Request Help!" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <!-- Right Side - Maintenance Request Form -->
                <VBox prefHeight="600.0" styleClass="right-container" HBox.hgrow="ALWAYS">
                    <children>
                        <!-- Form Title -->
                        <HBox alignment="CENTER_LEFT" prefHeight="80.0" styleClass="title-container">
                            <children>
                                <Label styleClass="signup-title" text="Maintenance Request" />
                            </children>
                        </HBox>

                        <!-- Form Container -->
                        <VBox prefHeight="520.0" spacing="15.0" styleClass="form-container">
                            <children>
                                <!-- Staff Name and Location Row -->
                                <HBox spacing="15.0">
                                    <children>
                                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                            <children>
                                                <Label styleClass="field-label" text="Staff Name" />
                                                <ComboBox fx:id="staffNameCombo" prefHeight="40.0" styleClass="combo-field" />
                                            </children>
                                        </VBox>
                                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                            <children>
                                                <Label styleClass="field-label" text="Location" />
                                                <TextField fx:id="locationField" prefHeight="40.0" styleClass="input-field" promptText="e.g., Office 101, Lab 2A" />
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>

                                <!-- Issue Description -->
                                <VBox spacing="5.0">
                                    <children>
                                        <Label styleClass="field-label" text="Issue Description" />
                                        <TextArea fx:id="issueArea" prefHeight="80.0" prefRowCount="3" styleClass="text-area-field" promptText="Describe the issue in detail..." wrapText="true" />
                                    </children>
                                </VBox>

                                <!-- Priority and Status Row -->
                                <HBox spacing="15.0">
                                    <children>
                                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                            <children>
                                                <Label styleClass="field-label" text="Priority" />
                                                <ComboBox fx:id="priorityCombo" prefHeight="40.0" styleClass="combo-field" />
                                            </children>
                                        </VBox>
                                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                            <children>
                                                <Label styleClass="field-label" text="Status" />
                                                <ComboBox fx:id="statusCombo" prefHeight="40.0" styleClass="combo-field" />
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>

                                <!-- Image Upload Section -->
                                <VBox spacing="5.0">
                                    <children>
                                        <Label styleClass="field-label" text="Upload Image (Optional)" />
                                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                                            <children>
                                                <Button fx:id="selectImageBtn"  prefHeight="35.0" styleClass="image-select-btn" text="Choose File" />
                                                <Label fx:id="imageNameLabel" styleClass="image-name-label" text="No file selected" />
                                            </children>
                                        </HBox>
                                        <!-- Image Preview -->
                                        <ImageView fx:id="imagePreview" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" visible="false">
                                        </ImageView>
                                    </children>
                                </VBox>

                                <!-- Submit Request Button -->
                                <Button fx:id="submitRequestBtn"  prefHeight="45.0" styleClass="create-account-btn" text="Submit Request" />

                                <!-- OR Separator -->
                                <HBox alignment="CENTER" spacing="10.0" styleClass="separator-container">
                                    <children>
                                        <Separator prefWidth="120.0" />
                                        <Label styleClass="or-text" text="Or" />
                                        <Separator prefWidth="120.0" />
                                    </children>
                                </HBox>

                                <!-- View Requests Button -->
                                <Button fx:id="viewRequestsBtn"  prefHeight="45.0" styleClass="login-btn" text="View My Requests" />
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>